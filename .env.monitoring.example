# ===========================
# MONITORING CONFIGURATION
# ===========================

# Sentry Configuration
SENTRY_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_DEBUG=false
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_MAX_BREADCRUMBS=100
SENTRY_RELEASE=v1.0.0
SENTRY_DIST=production

# Structured Logging
LOG_LEVEL=info
LOG_FORMAT=json
CONSOLE_LOG_LEVEL=info
FILE_LOGGING_ENABLED=false
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=7d
ELASTICSEARCH_LOGGING_ENABLED=false
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX=estimate-service-logs
SLOW_QUERY_THRESHOLD=1000

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=estimate-service
OTEL_SERVICE_VERSION=1.0.0

# OTLP Exporter
OTEL_EXPORTER_OTLP_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_EXPORTER_OTLP_COMPRESSION=gzip

# Jaeger Exporter
OTEL_EXPORTER_JAEGER_ENABLED=false
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus Exporter
OTEL_EXPORTER_PROMETHEUS_ENABLED=true
OTEL_EXPORTER_PROMETHEUS_PORT=9464
OTEL_EXPORTER_PROMETHEUS_PATH=/metrics

# Tracing Configuration
OTEL_TRACES_ENABLED=true
OTEL_TRACES_SAMPLER=parentbased_always_on
OTEL_TRACES_SAMPLER_ARG=1.0

# Metrics Configuration
OTEL_METRICS_ENABLED=true
OTEL_METRICS_INTERVAL=30000

# Logs Configuration
OTEL_LOGS_ENABLED=false
OTEL_LOG_LEVEL=info

# Resource Attributes
SERVICE_NAMESPACE=estimate
SERVICE_INSTANCE_ID=instance-1
CLOUD_PROVIDER=aws
CLOUD_REGION=us-east-1

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# Response Time Thresholds (ms)
PERF_RESPONSE_TIME_P50=100
PERF_RESPONSE_TIME_P95=500
PERF_RESPONSE_TIME_P99=1000

# Resource Thresholds
PERF_ERROR_RATE_THRESHOLD=0.05
PERF_CPU_THRESHOLD=0.8
PERF_MEMORY_THRESHOLD=0.85

# Database Performance
PERF_DB_POOL_THRESHOLD=0.9
PERF_DB_QUERY_TIME=1000
PERF_DB_TRANSACTION_TIME=5000

# Redis Performance
PERF_REDIS_POOL_THRESHOLD=0.9
PERF_REDIS_COMMAND_TIME=100

# Metrics Collection
METRICS_COLLECTION_INTERVAL=10000

# APM Configuration
APM_ENABLED=false
APM_SERVICE_NAME=estimate-service
APM_SERVER_URL=http://localhost:8200
APM_SECRET_TOKEN=
APM_TRANSACTION_SAMPLE_RATE=0.1

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_DISK_PATH=/
FSBC_API_URL=https://api.fsbc.ru/health
AI_SERVICE_URL=http://localhost:3002/health

# Dashboards Configuration
GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=
GRAFANA_MAIN_DASHBOARD_ID=
GRAFANA_PERF_DASHBOARD_ID=
GRAFANA_BUSINESS_DASHBOARD_ID=

KIBANA_ENABLED=false
KIBANA_URL=http://localhost:5601
KIBANA_SPACE=default

# Alerting Configuration
ALERTING_ENABLED=true

# Email Alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=admin@example.com,devops@example.com
ALERT_EMAIL_FROM=alerts@estimate-service.com

# Slack Alerts
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_SLACK_CHANNEL=#alerts

# Telegram Alerts
ALERT_TELEGRAM_ENABLED=false
ALERT_TELEGRAM_BOT_TOKEN=
ALERT_TELEGRAM_CHAT_ID=

# Application Info
APP_VERSION=1.0.0
HOSTNAME=estimate-service-01
