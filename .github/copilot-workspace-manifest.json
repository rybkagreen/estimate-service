{
  "version": "1.0",
  "name": "estimate-service",
  "description": "ИИ-ассистент для составления строительных смет с интеграцией ФСБЦ-2022",
  "type": "nx-monorepo",
  "technologies": {
    "backend": ["NestJS", "TypeScript", "Prisma", "PostgreSQL", "Redis"],
    "frontend": ["React", "TypeScript", "Vite", "Tailwind CSS"],
    "ai": ["DeepSeek R1", "Hugging Face", "MCP"],
    "infrastructure": ["Docker", "GitHub Actions", "Codespaces"]
  },
  "architecture": {
    "pattern": "Clean Architecture",
    "domain": "Domain-Driven Design",
    "cqrs": true,
    "eventSourcing": true
  },
  "workspace": {
    "type": "nx",
    "version": "17.2.8",
    "packageManager": "npm",
    "nodeVersion": "20.x",
    "npmScope": "estimate-service"
  },
  "projects": [
    {
      "name": "estimate-service",
      "type": "application",
      "framework": "nestjs",
      "path": "services/estimate-service"
    },
    {
      "name": "estimate-frontend",
      "type": "application",
      "framework": "react",
      "path": "apps/estimate-frontend"
    },
    {
      "name": "ai-assistant",
      "type": "application",
      "framework": "nestjs",
      "path": "services/ai-assistant"
    },
    {
      "name": "data-collector",
      "type": "application",
      "framework": "nestjs",
      "path": "services/data-collector"
    },
    {
      "name": "knowledge-base",
      "type": "application",
      "framework": "nestjs",
      "path": "services/knowledge-base"
    },
    {
      "name": "mcp-server",
      "type": "application",
      "framework": "node",
      "path": "mcp-server"
    },
    {
      "name": "shared-contracts",
      "type": "library",
      "framework": "typescript",
      "path": "libs/shared-contracts"
    }
  ],
  "domains": [
    {
      "name": "estimate-management",
      "description": "Управление строительными сметами",
      "entities": ["Estimate", "EstimateItem", "Rate", "Material", "Work"],
      "services": ["estimate-service"]
    },
    {
      "name": "pricing",
      "description": "Ценообразование и расчеты",
      "entities": ["PriceItem", "RegionalCoefficient", "OverheadCost", "Profit"],
      "services": ["estimate-service"]
    },
    {
      "name": "integration",
      "description": "Интеграция с внешними системами",
      "entities": ["FSBTSIntegration", "GrandSmetaExport", "AIService"],
      "services": ["estimate-service", "data-collector"]
    },
    {
      "name": "ai-processing",
      "description": "Обработка данных с помощью ИИ",
      "entities": ["AIModel", "Prompt", "Response", "Context"],
      "services": ["ai-assistant", "mcp-server"]
    },
    {
      "name": "knowledge-management",
      "description": "Управление базой знаний",
      "entities": ["Document", "Index", "SearchResult", "Metadata"],
      "services": ["knowledge-base", "data-collector"]
    }
  ],
  "copilot": {
    "context": ".github/COPILOT_CONTEXT.md",
    "prompts": ".github/copilot-prompts.json",
    "workspace": ".github/copilot-workspace.yml",
    "patterns": ".github/copilot-patterns.json",
    "tasks": ".github/copilot-tasks/common-tasks.json",
    "configuration": ".github/COPILOT_CONFIGURATION.md",
    "settings": ".vscode/copilot.json"
  }
}
