{
  "$schema": "https://json.schemastore.org/tsconfig",
  "displayName": "AI Construction Ecosystem - Base TypeScript Configuration",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ez-eco/ai-core": ["packages/common/ai-core/src"],
      "@ez-eco/ai-integration": ["libs/api-integration/src"],
      "@ez-eco/construction-ui": ["libs/construction-ui/src/index.ts"],
      "@ez-eco/monitoring": ["libs/monitoring/src/index.ts"],
      "@ez-eco/shared-auth": ["packages/backend/shared-auth/src/index.ts"],
      "@ez-eco/shared-config": ["libs/shared-config/src/index.ts"],
      "@ez-eco/shared-contracts": ["libs/shared-contracts/src/index.ts"],
      "@ez-eco/shared-database": ["packages/backend/shared-database/src/index.ts"],
      "@ez-eco/shared-events": ["packages/common/shared-events/src/index.ts"],
      "@ez-eco/shared-logger": ["libs/shared-logger/src/index.ts"],
      "@ez-eco/shared-middleware": ["packages/backend/shared-middleware/src/index.ts"],
      "@ez-eco/shared-security": ["libs/shared-security/src/index.ts"],
      "@ez-eco/shared-types": ["packages/common/shared-types/src"],
      "@ez-eco/ui-components": ["packages/frontend/ui-components/src"],
      "@ez-eco/ui-kit": ["packages/frontend/ui-kit/src"],
      "@ez-eco/utils": ["packages/common/utils/src"],
      "@ez-eco/websocket-client": ["packages/frontend/websocket-client/src"],
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "types": ["node", "jest", "react"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "incremental": true,
    "composite": false
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.e2e-spec.ts",
    "**/e2e/**",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
